<% if post.title.nil? %>
	<h1>Add new post</h1>
<% else %>
	<h1>Edit post</h1>
<% end %>

<form action="<%= url %>" method="post" name="edit">
<div id="edit_post">
	<h6><input type="text" name="title" value="<%= post.title %>" /></h6>
	<p><%= post.created_at %></p>
	<div class="entry">
		<textarea name="body"><%= post.body %></textarea>
	</div>
	<div class="edit"><input type="submit" value="Save" /> | <a href="<%= post.url %>">or go back (no changes saved)</a></div>
</div>
</form>
