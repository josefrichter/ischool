<%# TODO work out the localization of layout %>

<div id="news">
    
	<h1 class="nospacing">Novinky</h1>
	<h3 class="nospacing">nejnovější zprávy ze školy</h3>

	<% posts.each do |post| %>
	<div class="post">

		<h6><a href="<%= post.url %>"><%= post[:title] %></a><span class="meta"> - <%= post[:created_at].strftime("%d %b %Y") %></span></h6>

		<div class="entry">
			<%= post.summary_html %>
			<% if post.more? %>
				<a href="<%= post.url %>">Číst dál &raquo;</a>
			<% end %>
		</div>
	</div>
	
	<% end %>
   
	<div id="older_posts">
		<a href="/past">Starší příspěvky</a>
	</div>
	
	<% if admin? %>
		<div id="new_post"><a href="/posts/new">Nový příspěvek</a></div>
	<% end %>

</div><!-- #news -->						
				
