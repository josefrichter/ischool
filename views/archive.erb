<h1>Archive</h1>
<table class="archive">
<% posts.each do |post| %>
	<tr>
		<td class="date"><%= post.created_at.strftime("%d %b %Y") %></td>
		<td class="title"><a href="<%= post.url %>"><%= post.title %></a></td>
	</tr>
<% end %>
</table>

<div class="controls">
	<a href="/news">&laquo; back to all news</a>
</div>